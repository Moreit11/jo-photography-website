{
  "name": "jo-photography-website",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o ./_site/styles.css --minify",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./_site/styles.css --watch",
    "serve": "eleventy --serve --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run serve\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "@11ty/eleventy": "^3.1.2",
    "tailwindcss": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "@tailwindcss/typography": "^0.5.16",
    "daisyui": "^5.1.7",
    "postcss": "^8.5.6"
  }
}

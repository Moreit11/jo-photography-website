<section class="hero">
  <div class="hero__content">
    <h1 class="hero__title">{% if heroTitle %}{{ heroTitle }}{% else %} {{title}} {% endif %}</h1>
    <p class="hero__subtitle">{% if heroSubtitle %}{{ heroSubtitle }}{% else %}Capturing the Beauty of Nature in Dundee, Scotland{% endif %}</p>
    {% if heroButton %}
    <a href="{% if heroButtonLink %}{{ heroButtonLink }}{% else %}/portfolio{% endif %}" class="hero__btn">{{ heroButton }}</a>
    {% endif %}
  </div>
</section>
